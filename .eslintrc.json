{
  "parser": "babel-eslint",
  "env": {
    "browser": true, 
    "es6": true, 
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "plugins": [
		"env",
		"react",
    "react-app",
    "react-hooks"
	],
  "rules": {
    "brace-style": [
      0, 
      "1tbs", {
        "allowSingleLine": true
        }
      ],
    "linebreak-style": 0,
    "no-console": 0,
    "indent": [ 0, 2, {
        "ImportDeclaration": 4,
        "flatTernaryExpressions": false,
        "ObjectExpression": 2,
        "ArrayExpression": 2,
        "SwitchCase": 1,
        "CallExpression": {"arguments": "first"},
        "VariableDeclarator": {"var": 2, "let": 2, "const": 3}
      }
    ],
    "no-undef": 0,
    "no-unused-vars": 0,
    "no-extra-semi": 2,
    "no-unused-expressions": 0,
    "react/jsx-closing-bracket-location": 0,
    "react/jsx-indent-props": [0, 2],
    "react/jsx-indent": [0, 2],
		"react/jsx-no-undef": 0,
    "react/jsx-no-unused-vars": 0,
    "jsx-a11y/href-no-hash": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "semi": ["error", "never"],
    "react-hooks/rules-of-hooks": "error"
  }
}